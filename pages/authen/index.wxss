/* pages/authen/index.wxss */
.authen{
  width: 100%;
}
.authen .ctx{
  margin: 0 20rpx;
  position: absolute;
  top: 0;
  width: 95%;
  background: #FFFFFF;
  box-shadow: 0 0 12px 2px rgba(0,0,0,0.08);
  border-radius: 4px;
}
.authen .ctx .authen-header{
  width: 100%;
  background-image: linear-gradient(-180deg, #FFFFFF 0%, #FFFFFF 51%, #CCE5D9 100%);
  border-radius: 0px 4px 0px 0px;
}
.authen .ctx .authen-header image{
  width: 100%;
  height: 440rpx;
  object-fit: cover
}
.authen-info{
  font-size: 28rpx;
}
.authen-info .authen-info-title{
  padding: 20rpx;
  border-bottom: 1px solid #eee;
}
.authen-info .yzm{
  display: flex;
  align-items: center;
  justify-content: space-between
}
.authen-info .yzm button{
  font-size: 28rpx;
}