.header{
  width: 100%;
  position: relative;
}
.header .bgblock{
  height: 100rpx;
  width: 100%;
  display: flex;
  align-items: center;
}
.liveService-banner{
  width: 710rpx;
  height: 360rpx;
  background: #07c160;
  margin: 0 auto;
  position: relative;
  border-radius: 8rpx;
  margin-top: 20rpx;
  box-shadow:  0 0 24rpx 4rpx rgba(0,0,0,0.08);
}
.liveService-banner-text{
  width: 644rpx;
  font-size: 28rpx;
  color: #fff;
  line-height: 44rpx;
  position: absolute;
  bottom: 16rpx;
  left: 50%;
  transform: translateX(-50%);
}
.live-search{
  width: 710rpx;
  height: 60rpx;
  border-radius: 8rpx;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
  position: relative;
}
.live-search input{
  width: 100%;
  height: 24rpx;
  line-height: 24rpx;
  text-align: center;
   font-size: 24rpx;
}
.placeholder-int{
  color: #BDBDBD;
  font-size: 24rpx;
  text-align: center;
 
}
.search-icon{
  position: absolute;
  left: 200rpx;
  top:50%;
  transform: translateY(-50%);
}