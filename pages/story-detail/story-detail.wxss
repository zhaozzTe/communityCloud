.story-detail{
  width: 710rpx;
  margin: 0 auto;
  background: #fff;
  margin-bottom: 100rpx;
}
.detail-banner{
  margin-top: 20rpx;
  border-radius: 8rpx;
  box-shadow: 0 0 24rpx 4rpx rgba(0,0,0,0.08);
}
.detail-banner image{
  width: 100%;
  object-fit: cover
}
.detail-content{
  width: 710rpx;
  margin: 0 auto;
  margin-top: 56rpx;
  padding: 0 28rpx 40rpx;
  box-sizing: border-box;

}
.detail-content-title{
  color: #3C3C3C;
  font-weight: 600;
  font-size: 32rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}
.stoty-ht{
  display: inline-block;
  background: #00C5F6;
  color: #fff;
  width: 52rpx;
  height: 32rpx;
  line-height: 32rpx;
  font-size: 20rpx;
  margin-right: 12rpx;
  text-align: center;
}
.detail-content .images{
  width: 100%;
  display: flex;
  /* justify-content: space-around; */
}
.detail-content .images .image{
  width: 30%;
  height: 200rpx;
  margin: 1.5%;
}
.detail-content .images .image image{
  width: 100%;
  height: 100%;
  object-fit: cover
}

.detail-content-time{
  color: #999999;
  font-size: 24rpx;
  margin: 24rpx 0 32rpx 0;
}
rich-text{
  color: #666;
  font-size: 28rpx !important;
  line-height: 40rpx;
}
rich-text img{
  max-width: 100%;
  object-fit: cover;
}
rich-text p{
  font-size: 28rpx !important;
}
rich-text .pho{
  max-width: 100%;
  object-fit: cover;
}
.all-says-box{
  display: flex;
  width: 100%;
  height: 40rpx;
  margin-top: 56rpx;
 align-items: center;
 border-bottom: 2rpx solid  #F0F0F0;
padding-bottom: 24rpx;
box-sizing: border-box;
}
.all-says-l{
  font-weight: 600;
  font-size: 28rpx;
  color: #333333;
  letter-spacing: 0;
  line-height: 28rpx;
  padding-left: 12rpx;
  border-left: 8rpx solid #00C5F6;
  flex: 1;
}
.all-says-r{
 font-size: 24rpx;
 width: 65rpx;
}
.all-says-num{
 color: #00C5F6;
}
.story-detail-floot{
  position: fixed;
  bottom: 0;
  left: 0;
  width:100%;
  height: 120rpx;
  background: #fff;
  display: flex;
  /* justify-content: center; */
  align-items: center;

}
.story-detail-input{
  box-sizing: border-box;
  background: #F6F6F6;
  width: 90%;
  height: 80rpx;
  border-radius: 30rpx;
  margin: 0 auto;
  text-indent: 2em;
  padding: 0 20rpx;

}
.input-icon{
  width: 48rpx;
  height: 48rpx;
  margin-left: 40rpx;
}
.input-icon1{
   width: 48rpx;
  height: 48rpx;
  border: 2rpx solid #07c160;
  border-radius: 50%;
  margin-left: 40rpx;
  background: #fff;
}