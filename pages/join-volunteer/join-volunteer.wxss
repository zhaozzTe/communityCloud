.header {
  width: 100%;
  position: relative;
}

.header .bgblock {
  height: 100rpx;
  width: 100%;
  display: flex;
  align-items: center;
}

.liveService-banner {
  width: 710rpx;
  height: 360rpx;
  background: #07c160;
  margin: 0 auto;
  position: relative;
  border-radius: 8rpx;
  margin-top: 20rpx;
  box-shadow: 0 0 24rpx 4rpx rgba(0, 0, 0, 0.08);
}

.liveService-banner-text {
  width: 644rpx;
  font-size: 28rpx;
  color: #fff;
  line-height: 44rpx;
  position: absolute;
  bottom: 16rpx;
  left: 50%;
  transform: translateX(-50%);
}

.live-search {
  width: 710rpx;
  height: 60rpx;
  border-radius: 8rpx;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
  position: relative;
}

.live-search input {
  width: 100%;
  height: 24rpx;
  line-height: 24rpx;
  text-align: center;
  font-size: 24rpx;
}

.placeholder-int {
  color: #bdbdbd;
  font-size: 24rpx;
  text-align: center;
}

.search-icon {
  position: absolute;
  left: 200rpx;
  top: 50%;
  transform: translateY(-50%);
}

.volunteer-type {
  width: 710rpx;
  height: 200rpx;
  background: #fff;
  box-shadow: 0 0 24rpx 4rpx rgba(0, 0, 0, 0.08);
  border-radius: 12rpx;
}

.volunteer-type-top {
  height: 100rpx;
  width: 710rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 2rpx solid #f3f3f3;
  color: #333;
}

.type-teb-top {
  width: 50%;
  height: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.teb-top-l {
  border-right: 2rpx solid #f0f0f0;
}

.type-top-icon {
  width: 28rpx;
  height: 32rpx;
  margin-right: 18rpx;
}

.volunteer-type-bottom {
  height: 100rpx;
  width: 710rpx;
  display: flex;
  justify-content: center;
  border-bottom: 2rpx solid #f3f3f3;
  color: #333;
  align-items: center;
}

.type-bottom-teb {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.type-bottom-icon {
  width: 22rpx;
  height: 12rpx;
  margin-left: 18rpx;
}

.volunteer-item {
  width: 710rpx;
  height: 824rpx;
  margin: 0 auto;
  background: #fff;
  box-shadow: 0 0 24rpx 4rpx rgba(0, 0, 0, 0.08);
  border-radius: 8rpx;
}

.volunteer-item-banner {
  height: 360rpx;
  width: 710rpx;
  position: relative;
  margin-bottom: 40rpx;
}

.volunteer-item-img {
  width: 100%;
  height: 100%;
}

.volunteer-item-icon {
  width: 80rpx;
  height: 72rpx;
  position: absolute;
  top: 0;
  right: 40rpx;
}
.volunteer-item-icon-img{
   width: 80rpx;
  height: 72rpx;
  position: relative;
}
.volunteer-item-icon-datas{
  position: absolute;
  top: 10rpx;
  left: 50%;
  transform: translate(-50%);
  font-size: 28rpx;
  color: #FFFFFF;
}

.volunteer-item-box {
  padding: 0 32rpx;
  box-sizing: border-box;
}

.volunteer-item-title {
  font-size: 40rpx;
  color: #3c3c3c;
  margin-bottom: 20rpx;
  font-weight: 600;
}

.volunteer-item-text {
  font-size: 28rpx;
  color: #666;
}

.item-line {
  background: #f3f3f3;
  width: 100%;
  height: 2rpx;
  margin: 30rpx 0;
}

.volunteer-item-type {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 24rpx;
}

.volunteer-item-name {
  color: #999;
  margin-right: 64rpx;
  margin-left: 10rpx;
}

.volunteer-item-people {
  color: #00C5F6;
  font-size: 28rpx;
}

.volunteer-item-btn {
  width: 646rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #00C5F6;
  font-size: 36rpx;
  color: #fff;
  text-align: center;
  margin: 0 auto;
}
.no-join{
  opacity: .3;
}
