.header{
  width: 100%;
  position: relative;
}
.header .bgblock{
  height: 100rpx;
  width: 100%;
  display: flex;
  align-items: center;
}
.liveService-banner{
  width: 710rpx;
  height: 360rpx;
  background: #07c160;
  margin: 0 auto;
  position: relative;
  border-radius: 8rpx;
  margin-top: 20rpx;
  box-shadow:  0 0 24rpx 4rpx rgba(0,0,0,0.08);
}
.liveService-banner-text{
  width: 644rpx;
  font-size: 28rpx;
  color: #fff;
  line-height: 44rpx;
  position: absolute;
  bottom: 16rpx;
  left: 50%;
  transform: translateX(-50%);
}
.live-search{
  width: 710rpx;
  height: 60rpx;
  border-radius: 8rpx;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
  position: relative;
}
.live-search input{
  width: 100%;
  height: 24rpx;
  line-height: 24rpx;
  text-align: center;
   font-size: 24rpx;
}
.placeholder-int{
  color: #BDBDBD;
  font-size: 24rpx;
  text-align: center;
 
}
.search-icon{
  position: absolute;
  left: 200rpx;
  top:50%;
  transform: translateY(-50%);
}
.volunteer-type{
  width: 710rpx;
  height: 200rpx;
  background: #FFFFFF;
  box-shadow: 0 0 24rpx 4rpx rgba(0,0,0,0.08);
  border-radius: 12rpx;

}
.volunteer-type-top{
  height: 100rpx;
  width: 710rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 2rpx solid #F3F3F3;
}
.type-teb-top{
  width: 50%;
  height: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.teb-top-l{
 border-right: 2rpx solid #F0F0F0 ;
}
.type-top-icon{
  width: 28rpx;
  height: 32rpx;
  margin-right: 18rpx;
}
.volunteer-type-bottom{
 height: 100rpx;
  width: 710rpx;
  display: flex;
  justify-content: center;
  border-bottom: 2rpx solid #F3F3F3;
}
.type-bottom-teb{
  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.type-bottom-icon{
  width: 22rpx;
  height: 12rpx;
   margin-left: 18rpx; 
}