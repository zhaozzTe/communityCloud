.advice-box {
   padding: 0 32rpx;
  width: 710rpx;
 background: #FFFFFF;
  box-shadow: 0 0 24rpx 4rpx rgba(0,0,0,0.08);
  border-radius: 8rpx;
  
  box-sizing: border-box;
  font-size: 24rpx;
  color: #999;
}
.advice-item{
  padding: 30rpx 0;
  display: flex;
  border-bottom: 2rpx solid #F3F3F3;
  box-sizing: border-box;
}
.advice-item:nth-last-child(1) {
  border-bottom: none;
}

.item-left{ 
  flex: 1;
  font-size: 24rpx;
  color: #333333;
  letter-spacing: 0;
  line-height: 32rpx;
}
.item-left-title{
  font-size: 32rpx;
  color: #333333;
  letter-spacing: 0;
  line-height: 32rpx;
  margin-bottom: 40rpx;
  border-left: 8rpx solid #29BB74;
  padding-left: 12rpx;
  box-sizing: border-box;
}
.item-left-nums{
  color: #29BB74;
  font-size: 28rpx;
  letter-spacing: 0;
  line-height: 28rpx;
  margin-right: 40rpx;
}
.item-left-people{
  margin-bottom: 32rpx;
}
.item-right
{
  width: 96rpx;
  height: 48rpx;
  color: #29BB74;
  letter-spacing: 0;
  text-align: center;
  line-height:48rpx;
  border: 1rpx solid #2ABF77;
  text-align: center;
}