<view class="say-item">
  <view class="say-item-l">
    <image class="say-item-l-img" src="{{info.imgUrl}}"></image>
  </view>
  <view class="say-item-r">
    <view class="item-r-top">
      <view class="item-r-top-name">
        {{info.name}}
      </view>
      <view class="item-r-top-time">
       {{info.time}}
      </view>
    </view>
    <view class="item-r-bottom">
        {{info.content}}
    </view>
  </view>
</view>

